<%- include('../partials/header') %>

<div class="container">
    <h1>Blog Posts</h1>

    <a href="/new-post" class="button">Create a new post</a>

    <div class="posts">
        <% posts.forEach((post, index) => { %>
            <div class="post">
                <h2><a href="/post/<%= index %>"><%= post.title %></a></h2>
                <p><%= post.content.substring(0, 100) %>...</p>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>
